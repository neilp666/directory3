<%= render 'pages/home' unless user_signed_in? %>

<div id="pins" class="transitions-enabled">
    <% @profiles.each do |profile| %>
        <div class="box panel panel-default">
            <%= link_to image_tag(profile.image.url(:medium)), profile %>
              <div class="panel-body">
                <%= profile.description %></br>
                  <strong><%= profile.user.email %></strong>
              
                <div class="actions">
                  <% if profile.user = current_user %>
                    
                  <%= link_to raw('<span class="glyphicon glyphicon-edit"></span>  Edit'), edit_profile_path(profile) %> |

                     <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
</div>

<div class="center">
   <%= will_paginate @profiles, renderer: BootstrapPagination::Rails %>
</div>



